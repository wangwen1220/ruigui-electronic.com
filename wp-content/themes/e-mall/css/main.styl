          background-position right center
          background-position left 10px center

    &:first-child
      border-top 0

    // &.hidden
    //   position absolute
    //   left -9999px
    //   width 100%

    &.all
      // display none

      > h2
        margin-bottom 5px
        font-size 1.3rem
        color dred

      > ul a
        display block
        height 24px
        line-height 24px

  > .viewmore
    display block
    margin 0 10px 20px
    padding 0
    height 38px
    border-radius 5px
    color #fff
    font 1.6rem/38px fonts
    text-align center
    background linear-gradient(top, #D70303, #CC0000)
    box-shadow 1px 1px rgba(0, 0, 0, .38)

    &:after
      content ''
      display inline-block
      margin -4px 0 0 10px
      width 8px
      height 8px
      border 1px #f7f7f7 solid
      border-width 0 1px 1px 0
      transform rotate(45deg)
      vertical-align middle

    &.unfold:after
      margin 0 0 -4px 10px
      border-width 1px 0 0 1px

